<p>Find me in app/views/articles/new.html.erb</p>


<%=form_for @article do |f| %> 

<div class = "field">
	<%= f.label :title , 'Title:', size:"35" %></br>
    <%= f.text_field :title%>

</div>

</br>

<div class = "field">
     <%= f.label :content, 'Content:'%></br>
     <%=  f.text_area :content , rows: '10', cols: '40'%>
</div>

</br>

<div class = "actions">     
     <%=  f.submit 'save'%>
</div>

</br>

<%=link_to 'back', articles_path%>

<%end%>