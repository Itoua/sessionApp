<div class="commentdisplayed" >
    
     <div> 
        <%= comment.body%> 
     </div>

    <p>
        Created <%= time_ago_in_words(comment.created_at)%> ago 
    </p>

    <%if policy(comment).edit? %>
    <%#<%=link_to 'Edit', edit_article_comment_path(comment.article, comment) %>
    <%=link_to 'Edit', edit_article_comment_path(@article, comment) %>
    <%end%>

    <%if policy(comment).destroy?%>
    <%#<%=link_to 'Delete', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
    <%=link_to 'Delete', [@article, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
    <%end%>

</div>
